<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="720.0" prefWidth="1280.0" spacing="20.0" style="-fx-background-color: #F1F1E6;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.spachecor.ejerciciofinalsgecn.controller.insercion.InsertarEstudianteController">
   <children>
      <VBox alignment="CENTER" prefHeight="480.0" prefWidth="1240.0" spacing="25.0">
         <children>
            <Label text="Nombre del Estudiante" textFill="#02547f">
               <font>
                  <Font size="14.0" />
               </font></Label>
            <TextField fx:id="nombreTextField" maxWidth="500.0">
               <VBox.margin>
                  <Insets bottom="25.0" />
               </VBox.margin></TextField>
            <Label layoutX="608.0" layoutY="212.0" text="Apellidos del Estudiante" textFill="#02547f">
               <font>
                  <Font size="14.0" />
               </font></Label>
            <TextField fx:id="apellidoTextField" layoutX="380.0" layoutY="229.0" maxWidth="500.0">
               <VBox.margin>
                  <Insets bottom="25.0" />
               </VBox.margin></TextField>
            <Label layoutX="608.0" layoutY="258.0" text="Email del Estudiante" textFill="#02547f">
               <font>
                  <Font size="14.0" />
               </font></Label>
            <TextField fx:id="emailTextField" layoutX="380.0" layoutY="275.0" maxWidth="500.0" />
         </children></VBox>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="1240.0" spacing="20.0">
         <children>
            <Label fx:id="errorLabel" textFill="#900000" />
            <HBox alignment="CENTER" prefHeight="125.0" prefWidth="1240.0" spacing="250.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#onClickGuardarButton" text="Guardar" textFill="#02547f">
                     <font>
                        <Font size="18.0" />
                     </font></Button>
                  <Button mnemonicParsing="false" onAction="#onClickVolverButton" text="Volver" textFill="#02547f">
                     <font>
                        <Font size="18.0" />
                     </font></Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
