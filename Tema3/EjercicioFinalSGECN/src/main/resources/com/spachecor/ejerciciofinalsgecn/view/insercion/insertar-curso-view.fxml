<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.spachecor.ejerciciofinalsgecn.controller.insercion.InsertarCursoController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <VBox alignment="CENTER" prefHeight="680.0" prefWidth="620.0">
         <children>
            <VBox alignment="CENTER" prefHeight="530.0" prefWidth="100.0" spacing="50.0">
               <children>
                  <Label text="Nombre del curso:" />
                  <TextField fx:id="nombreTextField" maxWidth="500.0">
                     <VBox.margin>
                        <Insets bottom="20.0" />
                     </VBox.margin>
                  </TextField>
                  <Label text="Descripción del curso:" />
                  <TextField fx:id="descripcionTextField" maxWidth="500.0">
                     <VBox.margin>
                        <Insets bottom="50.0" />
                     </VBox.margin>
                  </TextField>
               </children>
            </VBox>
            <VBox alignment="CENTER" prefHeight="150.0" prefWidth="100.0" spacing="30.0">
               <children>
                  <Label fx:id="errorLabel" textFill="#900000">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </Label>
                  <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" spacing="250.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#onClickGuardarButton" text="Guardar" />
                        <Button mnemonicParsing="false" onAction="#onClickVolverButton" text="Volver" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children></VBox>
      <VBox prefHeight="680.0" prefWidth="620.0" spacing="20.0">
         <children>
            <HBox prefHeight="100.0" prefWidth="620.0">
               <children>
                  <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="310.0">
                     <children>
                        <Label text="Alumnos inscritos:" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="310.0" spacing="5.0">
                     <children>
                        <Label text="Nuevo alumno: " />
                        <ChoiceBox fx:id="listaAlumnosChoiceBox" prefWidth="150.0" />
                        <Button mnemonicParsing="false" onAction="#onClickAniadirButton" text="Añadir" />
                     </children>
                  </HBox>
               </children>
            </HBox>
            <TableView fx:id="tablaAlumnosTableView" prefHeight="630.0" />
         </children>
         <padding>
            <Insets top="10.0" />
         </padding></VBox>
   </children>
</HBox>
