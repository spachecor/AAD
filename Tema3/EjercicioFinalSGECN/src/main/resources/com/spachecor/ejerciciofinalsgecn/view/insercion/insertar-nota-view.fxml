<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="720.0" prefWidth="1280.0" spacing="20.0" style="-fx-background-color: #F1F1E6;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.spachecor.ejerciciofinalsgecn.controller.insercion.InsertarNotaController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <VBox alignment="CENTER" prefHeight="480.0" prefWidth="1240.0" spacing="20.0">
         <children>
            <Label fx:id="valorLabel" text="Valor de la Nota" textFill="#02547f">
               <font>
                  <Font size="14.0" />
               </font></Label>
            <TextField fx:id="valorTextField" maxWidth="500.0" prefWidth="701.0" style="-fx-border-color: #02547F; -fx-background-radius: 5; -fx-border-radius: 5;">
               <VBox.margin>
                  <Insets bottom="25.0" />
               </VBox.margin></TextField>
            <Label fx:id="fechaLabel" text="Fecha de la Nota" textFill="#02547f">
               <font>
                  <Font size="14.0" />
               </font></Label>
            <DatePicker fx:id="fechaDatePicker" prefWidth="500.0" style="-fx-border-color: #02547F; -fx-background-color: #ECFBFF; -fx-background-radius: 5; -fx-border-radius: 5;">
               <VBox.margin>
                  <Insets bottom="25.0" />
               </VBox.margin></DatePicker>
            <Label fx:id="cursoLabel" text="Curso al que pertenece la Nota" textFill="#02547f">
               <font>
                  <Font size="14.0" />
               </font></Label>
            <ChoiceBox fx:id="cursoChoiceBox" prefWidth="500.0" style="-fx-background-color: #ECFBFF; -fx-border-color: #02547F; -fx-background-radius: 5; -fx-border-radius: 5;">
               <VBox.margin>
                  <Insets bottom="25.0" />
               </VBox.margin></ChoiceBox>
            <Label fx:id="estudianteLabel" text="Estudiante al que pertenece la Nota" textFill="#02547f">
               <font>
                  <Font size="14.0" />
               </font></Label>
            <ChoiceBox fx:id="estudianteChoiceBox" prefWidth="500.0" style="-fx-background-color: #ECFBFF; -fx-border-color: #02547F; -fx-background-radius: 5; -fx-border-radius: 5;" />
         </children></VBox>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="1240.0" spacing="20.0">
         <children>
            <Label fx:id="errorLabel" />
            <HBox alignment="CENTER" prefHeight="125.0" prefWidth="1240.0" spacing="250.0">
               <children>
                  <Button fx:id="guardarButton" mnemonicParsing="false" onAction="#onClickGuardarButton" style="-fx-background-color: #ECFBFF; -fx-border-color: #02547F; -fx-background-radius: 10; -fx-border-radius: 10;" text="Guardar" textFill="#02547f">
                     <font>
                        <Font size="18.0" />
                     </font></Button>
                  <Button fx:id="volverButton" mnemonicParsing="false" onAction="#onClickVolverButton" style="-fx-background-color: #ECFBFF; -fx-border-color: #02547F; -fx-background-radius: 10; -fx-border-radius: 10;" text="Volver" textFill="#02547f">
                     <font>
                        <Font size="18.0" />
                     </font></Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</VBox>
